@using EcommerceByAdo.Data.Enums;
@using EcommerceByAdo.ViewModel;
@model CreateMensViewModel


<form method="Post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="CName">Product Name</label>
        <input asp-for="CName" class="form-control" placeholder="Enter product Title">
        <span asp-validation-for="CName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rate">Price</label>
        <input asp-for="Rate" class="form-control" placeholder="Enter price">
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Clothing Category</label>
        <select asp-for="Category" asp-items="@Html.GetEnumSelectList(typeof(Category))">
            <option>----select-----</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CImage">Image</label>
        <input asp-for="CImage" type="file" class="form-control" placeholder="Enter Image description">
        <span asp-validation-for="CImage" class="text-danger"></span>
    </div>


    <button type="submit" style="margin-top: 15px; background-color:tomato" class="btn btn-primary">Submit</button>
</form>